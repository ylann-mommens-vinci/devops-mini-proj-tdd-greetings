{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": "standard",
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "requireConfigFile": false
    },
    "rules": {
        "indent": ["error", 4],
        "semi": ["error", "always"],
        "semi-style": ["error", "last"]
    }
}
